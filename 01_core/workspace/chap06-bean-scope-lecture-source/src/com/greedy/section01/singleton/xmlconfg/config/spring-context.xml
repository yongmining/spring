<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   <bean id="carpBread" class="com.greedy.section01.singleton.xmlconfg.Bread">
      <constructor-arg name="name" value="붕어빵"/>
      <constructor-arg name="price" value="1000"/>
      <constructor-arg name="bakedDate" ref="today"/>
   </bean>
   <bean id="today" class="java.util.Date"/>
   
   <bean id="milk" class="com.greedy.section01.singleton.xmlconfg.Beverage">
      <constructor-arg name="name" value="초코우유"/>
      <constructor-arg name="price" value="2000"/>
      <constructor-arg name="capacity" value="500"/>
   </bean>

   <bean id="water" class="com.greedy.section01.singleton.xmlconfg.Beverage">
      <constructor-arg name="name" value="백두산암반수"/>
      <constructor-arg name="price" value="5000"/>
      <constructor-arg name="capacity" value="500"/>
   </bean>
   
   <bean id="cart" class="com.greedy.section01.singleton.xmlconfg.ShoppingCart" scope="prototype"/>
   
</beans>
